<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RocketChat" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RocketChat.H1">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="RocketChat.H2">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RocketChat.H4">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RocketChat.H4.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RocketChat.Body">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RocketChat.SubTitle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RocketChat.SubTitle.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RocketChat.Body.LightGreen">
        <item name="android:textColor">@color/light_green</item>
    </style>

    <style name="RocketChat.Body.Link">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="RocketChat.H4.AllCaps">
        <item name="android:textColor">@color/light_gray</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="RocketChat.Button">
        <item name="textAllCaps">true</item>
    </style>
</resources>